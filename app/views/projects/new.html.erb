<h1 class="mb-md-3">Add a new project</h1>

<%= form_for(@project.with_no_cover) do |f| %>

  <% if @project.errors.any? %>
    <div class="alert alert-danger">
      <h5 class="alert-heading">There was an error. Fix the <%= pluralize(@project.errors.count, "error") %> below before attempting to save.</h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>

          <li>
            <%= msg %>
          </li>

        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', autofocus: 'true', placeholder: 'Enter the name of the project' %>
  </div>

  <div class="form-group">
    <%= f.label :date_completed, "Date Completed" %>
    <%= f.text_field :date_completed, class: 'form-control', placeholder: 'Enter date (yyyy-mm-dd)' %>
  </div>

  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :link, class: 'form-control', placeholder: 'Enter the project\'s URL' %>
  </div>

  <%= f.fields_for :image do |image_form| %>
    <div class="form-group">
      <%= image_form.label :source, "Cover" %>
      <%= image_form.text_field :source, class: 'form-control', placeholder: 'Enter the image URL' %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Add Project", class: 'btn btn-primary' %>
  </div>

<% end %>
