<% if project %>

  <div class="col-md-4 py-md-4 list-item project">
    <div class="rounded-corners overflow-hidden shadow-sm bg-light mb-md-3">
      <%= image_tag project.image.source, alt: "#{project.name}" %>
    </div>
    <div class="links">
      <div class="row px-md-3">
        <p class="text-muted mb-md-2"><%= project.name %></p>
      </div>
      <% if user_signed_in? %>
        <div class="row px-md-3">
          <%= link_to "Make Changes", edit_admin_project_path(project), class: 'btn btn-sm btn-outline-secondary mr-md-1' %>
          <%= link_to "Remove", admin_project_path(project), method: :delete, data: { confirm: 'Are you sure you no longer want to share this project?' }, class: 'btn btn-sm btn-outline-danger mx-md-1' %>
        </div>
      <% end %>
    </div>
  </div>

<% end %>