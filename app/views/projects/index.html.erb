<div class="w-100 my-md-3 py-md-3">

  <h3 class="lead text-muted my-md-3">List of Projects</h3>

  <%= link_to "Add New Project", new_project_path, class: 'btn btn-outline-dark my-md-3' %>

  <% @projects.in_groups_of(3).each do |group| %>

    <div class="row">

      <% group.each do |project| %>

        <% if project %>

          <div class="col-md-4 py-md-4 list-item project">
            <%= link_to (image_tag project.image.source), edit_project_path(project), class: 'rounded-corners overflow-hidden shadow-sm bg-list mb-md-3', title: "#{project.name}" %>
            <div class="links">
              <%= link_to "Make Changes", edit_project_path(project), class: 'btn btn-sm btn-outline-secondary mx-md-1' %>
              <%= link_to "Remove", project_path(project), method: :delete, data: { confirm: 'Are you sure you no longer want to share this project?' }, class: 'btn btn-sm btn-outline-danger mx-md-1' %>
            </div>
          </div>

        <% end %>

      <% end %>

    </div>

  <% end %>

</div>
