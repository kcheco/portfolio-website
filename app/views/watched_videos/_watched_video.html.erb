<% if video %>

  <div class="col-md-4 py-md-4 list-item watched_video">
    <div class="rounded-corners overflow-hidden shadow-sm bg-light mb-md-3">
      <%= image_tag video.image.source, alt: "#{video.title}" %>
    </div>
    <div class="links">
      <div class="row px-3">
        <p class="text-muted mb-md-2"><%= video.title %></p>
      </div>
      <% if user_signed_in? %>
      
        <div class="row px-3 mb-5 mb-md-0">
          <%= link_to "Make Changes", edit_admin_watched_video_path(video), class: 'btn btn-sm btn-outline-secondary mr-1' %>
          <%= link_to "Remove", admin_watched_video_path(video), method: :delete, data: { confirm: 'Are you sure you want to remove this video from your list?' }, class: 'btn btn-sm btn-outline-danger mx-md-1' %>
        </div>

      <% end %>
    </div>
  </div>

<% end %>