<h1></h1>

<%= form_for(@watched_video.with_no_cover) do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :date_viewed, "Date Viewed" %>
    <%= f.text_field :date_viewed %>
  </div>

  <div>
    <%= f.label :link %>
    <%= f.text_field :link %>
  </div>

  <%= f.fields_for :image do |image_form| %>
    <div>
      <%= image_form.label :source, "Cover" %>
      <%= image_form.text_field :source %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Add Video" %>
  </div>

<% end %>
